<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="richboys.dragonhacks.root.budgeteer.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/moneyman" />

    <TextView
        android:id="@+id/username_text_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/enter_username"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:gravity="center"/>
    <View
        android:id="@+id/rectangle_view"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/username_text_view"
        android:layout_margin="6dp"
        android:background="@color/colorPrimaryDark">

    </View>


    <EditText
        android:id="@+id/username_editText_view"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rectangle_view"
        android:layout_centerHorizontal="true"
        android:hint="@string/enter_username_hint" />

    <Button
        android:id="@+id/main_activity_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_editText_view"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:padding="14dp"
        android:textStyle="normal"
        android:text="Log in"
        android:textSize="24dp" />



</RelativeLayout>
